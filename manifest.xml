        <Resources>
          <bt:Images>
            <bt:Image id="icon16" DefaultValue="https://angularaddineu.azurewebsites.net/assets/icon-16.png"/>
            <bt:Image id="icon32" DefaultValue="https://angularaddineu.azurewebsites.net/assets/icon-32.png"/>
            <bt:Image id="icon80" DefaultValue="https://angularaddineu.azurewebsites.net/assets/icon-80.png"/>
